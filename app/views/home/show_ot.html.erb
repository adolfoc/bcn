<table>
	<tbody>
		<tr><th>Número de serie</th><td><%= @ot.serial_number %></td></tr>
		<tr><th>Tipo de OT</th><td><%= @ot.name %></td></tr>
		<tr><th>Prioridad</th><td><%= @ot.priority.name %></td></tr>
		<tr><th>Estado</th><td><%= @ot.current_task_name + "/" + @ot.current_step %></td></tr>
		<tr><th>Documento fuente</th><td>
			<% if !@ot.source_frbr_manifestation.nil? %>
				<%= @ot.source_frbr_manifestation.name %>
			<% else %>
				Aún no se ha seleccionado <%= link_to "seleccionar documento fuente", elegir_documento_path(@ot.id) %>
			<% end %>
		</td></tr>
		<tr><th>Documento marcado</th><td>
			<% if !@ot.target_frbr_manifestation.nil? %>
				<%= @ot.target_frbr_manifestation.name %>
			<% else %>
				Aún no se ha generado
			<% end %>
		</td></tr>
		<tr><th>Creada por</th><td><%= @ot.owner.user_name %></td></tr>
		<tr><th>Creada el</th><td><%= @ot.created_on %></td></tr>
		<tr><th>Fecha de entrega</th><td><%= @ot.target_date %></td></tr>
		<tr><th>Completada el</th><td><%= @ot.completed_on %></td></tr>
	</tbody>
</table>

<div class="ui-tabs ui-widget ui-widget-content ui-corner-all" id="ot-tabs">
	<ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
		<li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active"><a href="#ot-tabs-tasks">Tareas</a></li>
		<li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active"><a href="#ot-tabs-documents">Documentos</a></li>
		<li class="ui-state-default ui-corner-top"><a href="#ot-tabs-log">Traza</a></li>
	</ul>
	<div class="ui-tabs-panel ui-widget-content ui-corner-bottom" id="ot-tabs-tasks">
		<%= render "show_tasks", :locals => {:ot => @ot } %>
	</div>
	<div class="ui-tabs-panel ui-widget-content ui-corner-bottom" id="ot-tabs-documents">
		<%= render "show_documents", :locals => {:ot => @ot } %>
	</div>
	<div class="ui-tabs-panel ui-widget-content ui-corner-bottom" id="ot-tabs-log">
		<%= render "show_log" %>
	</div>
</div>

<% if current_user.role.id == 3 || current_user.role.id == 5 %>
	<% if @task.current_state.events.count > 0 %>
		|&nbsp;
	<% end %>
	<% @task.current_state.events.each do |event| %>
		<%= link_to event[1].name, "/plan_cuenta/perform_work/#{@task.id}/#{event[1].name}" %>&nbsp;|&nbsp;
	<% end %>
<% end %>
