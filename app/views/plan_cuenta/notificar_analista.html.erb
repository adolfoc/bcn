<h1>Notificar analista</h1>

<table>
	<thead>
		<tr>
			<th>Tarea</th>
			<th>Usuario</th>
		</tr>
	</thead>
	<tbody>
	<% @ot.tasks.each do | task | %>
		<% if task.current_user_id != @ot.created_by %>
			<tr>
				<td><%= task.name %></td>
				<td><%= task.current_user.user_name %></td>
			</tr>
		<% end %>
	<% end %>
	</tbody>
</table>

<%= render 'notificar_analista_form' %>
